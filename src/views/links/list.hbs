<div class="container p-4">
  <div class="row m-4">
    {{#each links}}
      <div class="col-md-4 mb-3">
        <div class="card text-center">
          <div class="card-body">
            <a href="{{url}}" target="_blank">
              <h3 class="card-title text-uppercase">
                {{title}}
              </h3>
            </a>
            <div class="card bg-white text-dark">
              {{url}}
            </div>

            <p class="card bg-white text-dark m-2">
              {{description}}
            </p>
            <a href="/links/delete/{{id}}" class="btn btn-danger">Delete</a>
            <a href="/links/edit/{{id}}" class="btn btn-info">edit</a>
          </div>
        </div>
      </div>
      {{else}}
        <div class=" col-md-4 mx-auto">
          <div class="card card-body text-center">
            <p class="text-white">Not elements founded...</p>
            <a href="/links/add">
              <button class="btn btn-primary">Create Note</button>
            </a>
          </div>
        </div>
    {{/each}}
  </div>
</div>