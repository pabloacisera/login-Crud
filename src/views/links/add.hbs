<div class="container -p-4">
    <div class="row">
        <div class="col-md-4 mx-auto mt-5">
            <div class="card">
                <div class="card-body">
                    <form action="/links/add" method="post">
                        <div class="form-group mt-1">
                            <input type="text" class="form-control" name="title" placeholder="title" autofocus>
                        </div>
                        <div class="form-group mt-1">
                            <input type="url" class="form-control" name="url" placeholder="url">
                        </div>
                        <div class="form-group mt-1">
                            <textarea name="description" id="description" rows="2" class="form-control" placeholder="description"></textarea>
                        </div>
                        <div class="form-group mt-2">
                            <button class="btn btn-success btn-block w-100">
                                save
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>